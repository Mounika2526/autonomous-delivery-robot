<launch>
  <!-- Use Gazebo simulated time everywhere -->
  <param name="use_sim_time" value="true"/>

  <!-- 1. Gazebo with world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find autonomous-delivery-robot)/world/adr_campus.world"/>
    <arg name="paused" value="false"/>
  </include>

  <!-- 2. Load URDF into parameter server -->
  <param name="robot_description"
         textfile="$(find autonomous-delivery-robot)/urdf/delivery_bot.urdf" />

  <!-- 3. Spawn robot in Gazebo -->
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_delivery_bot"
        output="screen"
        args="-urdf -model delivery_bot -param robot_description" />

  <!-- 4. Publish TF based on joint states + URDF -->
  <node pkg="robot_state_publisher"
        type="robot_state_publisher"
        name="robot_state_publisher"
        output="screen">
    <param name="publish_frequency" value="50.0" />
  </node>

  <!-- 5. Odom -> Pose2D bridge -->
  <node pkg="autonomous-delivery-robot"
        type="odom_to_pose2d.py"
        name="odom_to_pose2d"
        output="screen" />

  <!-- 6. A* path planner -->
  <node pkg="autonomous-delivery-robot"
        type="path_planner.py"
        name="path_planner"
        output="screen" />

  <!-- 7. Navigation + obstacle avoidance controller -->
  <node pkg="autonomous-delivery-robot"
        type="nav_controller.py"
        name="nav_controller"
        output="screen" />

  <!-- 8. RViz navigation view -->
  <node pkg="rviz"
        type="rviz"
        name="rviz"
        args="-d $(find autonomous-delivery-robot)/launch/rviz_nav.rviz"
        output="screen" />
</launch>
